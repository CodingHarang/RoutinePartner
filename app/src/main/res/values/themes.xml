<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RoutinePartner" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#343434</item>
        <item name="colorPrimaryVariant">#343434</item>
        <item name="colorOnPrimary">#343434</item>
        <item name="colorPrimaryDark">#343434</item>
        <item name="android:statusBarColor">#FEFEFE</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="MyDatePickerStyle" parent="Theme.Material3.DayNight.Dialog">
        <item name="colorAccent">#898989</item>
        <!--selected Item color-->
        <item name="colorControlActivated">#898989</item>
        <!-- arrow bordercolor(<>)-->
        <item name="android:selectableItemBackgroundBorderless">@color/border</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">#898989</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">@color/dialogWindowBg</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">#898989</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">#FEFEFE</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">#898989</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">#FEFEFE</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">#FEFEFE</item>

    </style>

    <style name="numberPickerCustom" parent="Theme.AppCompat.DayNight">
        <item name="android:editTextColor">#BDBDBD</item>
        <item name="android:colorControlNormal">#BDBDBD</item>
    </style>

    <style name="textColor" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">#BDBDBD</item>
    </style>
</resources>